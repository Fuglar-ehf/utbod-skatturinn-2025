{
  "openapi": "3.0.0",
  "paths": {
    "/national-registry/v1/people/{national_id}": {
      "get": {
        "description": "Retrieves an individual from the national registry using their national ID.",
        "operationId": "NationalRegistryV1Controller_getByNationalId_v1",
        "parameters": [
          {
            "name": "national_id",
            "required": true,
            "in": "path",
            "description": "The national ID of the person to be retrieved",
            "schema": {
              "example": "1234567890",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The person details retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Person"
                }
              }
            }
          },
          "404": {
            "description": "Person with the specified national ID not found."
          }
        },
        "summary": "Get a person by national ID",
        "tags": [
          "People"
        ]
      }
    }
  },
  "info": {
    "title": "National Registry API",
    "description": "Mock API for National Registry service",
    "version": "v1.0.0",
    "contact": {
      "name": "Fuglar ehf.",
      "url": "https://www.fuglar.com/",
      "email": "fuglar@fuglar.com"
    }
  },
  "tags": [],
  "servers": [
    {
      "url": "http://localhost:[port]/national-registry",
      "description": "Development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      },
      "API Key": {
        "type": "apiKey",
        "in": "header",
        "name": "apiKey"
      }
    },
    "schemas": {
      "Person": {
        "type": "object",
        "properties": {
          "national_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "nominative_case_address": {
            "type": "string"
          },
          "dative_case_address": {
            "type": "string"
          },
          "postal_code": {
            "type": "string"
          },
          "gender": {
            "type": "string"
          },
          "birth_date": {
            "format": "date-time",
            "type": "string"
          },
          "family_id": {
            "type": "string"
          },
          "marital_status": {
            "type": "string"
          },
          "nationality": {
            "type": "string"
          }
        },
        "required": [
          "national_id",
          "name",
          "nominative_case_address",
          "dative_case_address",
          "postal_code",
          "gender",
          "birth_date",
          "family_id",
          "marital_status",
          "nationality"
        ]
      }
    }
  },
  "x-category": [
    "personal",
    "official"
  ],
  "x-pricing": [
    "free"
  ]
}